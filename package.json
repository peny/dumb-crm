{
  "name": "dumb-crm",
  "version": "1.0.0",
  "description": "A simple CRM built with Fastify and Prisma",
  "main": "main.js",
  "scripts": {
    "start": "node main.js",
    "dev": "cp prisma/schema.sqlite.prisma prisma/schema.prisma && prisma generate && nodemon main.js",
    "build": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate",
    "dev:setup": "cp prisma/schema.sqlite.prisma prisma/schema.prisma && prisma generate && prisma db push",
    "deploy:build": "prisma generate && prisma migrate deploy"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/cookie": "^8.3.0",
    "@fastify/jwt": "^7.2.4",
    "@prisma/client": "^5.7.1",
    "dotenv": "^16.3.1",
    "prisma": "^5.7.1",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": ["crm", "fastify", "prisma", "api"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
